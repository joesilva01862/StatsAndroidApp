<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats_mainlayout"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joe.statsapp.StatsActivity"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:orientation="horizontal">

        <TextView
            android:width="400px"
            android:gravity="end"
            android:textSize="90px"
            android:id="@+id/year_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year:" />

        <EditText
            android:id="@+id/year_editbox"
            android:width="400px"
            android:textSize="80px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="146px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_textView"
            android:width="400px"
            android:gravity="end"
            android:textSize="90px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month:" />

        <EditText
            android:id="@+id/month_editbox"
            android:width="400px"
            android:textSize="80px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_textView"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:orientation="vertical">

        <Button
            android:id="@+id/retrieve_button"
            android:width="300px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrieve" />
    </LinearLayout>

</LinearLayout>
